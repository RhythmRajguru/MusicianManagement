<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/event_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/event_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"

            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/event_id_text"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/event_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/event_title_text"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/event_id_text"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/event_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:layout_below="@id/event_description_text"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/event_id_text"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/event_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:layout_below="@id/event_date_text"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/event_id_text"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>